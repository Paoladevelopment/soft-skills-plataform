{
  "version": 2,
  "installCommand": "pip install -r soft-skills-back/requirements.txt && cd soft-skills-front && npm install",
  "builds": [
    {
      "src": "soft-skills-back/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "soft-skills-front/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/soft-skills-back/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/soft-skills-front/dist/$1"
    }
  ],
  "env": {
    "APP_MODULE": "main:app"
  }
}

